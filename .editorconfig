# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,scss,json}]
charset = utf-8

[*.{scss}]
indent_style = space
indent_size = 4

[src/**.js]
indent_style = space
indent_size = 2

[{package.json}]
indent_style = space
indent_size = 2

